<%= turbo_frame_tag 'cart-show' do %>
  <% if @cart.orderables.count > 0 %>

    <%= render 'cart/orderables_show' %>

    <div class="col-12">
      <div class="section-title">
        <div class="bottom">
          <div class="button my-5">
            <h2>Total: <%= @cart.total.round(2) %>$</h2>
            <a href="checkout.html" class="btn animate">Checkout</a>
          </div>
        </div>
      </div>
    </div>

  <% else %>
    <div class="shopping-item">
      <p>Your Cart is Empty</p>
    </div>
  <% end %>
<% end %>
