<div class="pagination-number <%= 'pagination-active' if page.current? %>">
  <% if page.current? %>
    <%= tag.span page, class: 'pagination-number' %>
  <% else %>
    <%= link_to page, url,
                       remote: remote,
                       rel: page.rel,
                       class: 'pagination-number'%>
  <% end %>
</div>
