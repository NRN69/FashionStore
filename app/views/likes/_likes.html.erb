<%= turbo_frame_tag 'likes', scr: "#{request.path}", loading: :lazy do %>
  <div class="row">
    <div class="col-12">
      <div class="section-title">
        <h2>Favorite Products</h2>
      </div>
    </div>
  <% current_user.likes.each do |like| %>
    <% product = like.product %>

    <div class="col-lg-3 col-md-4">

      <!-- Start Single Product -->
      <%= turbo_frame_tag like do %>
        <div class="single-product">
          <div class="product-image">
            <%= link_to image_tag(product.img), product, data: {turbo_frame: '_top'} %>
          </div>
          <div class="product-info">
            <span class="category"></span>
            <h4 class="title">
              <%= link_to product.title, product, data: {turbo_frame: '_top'} %>
            </h4>

            <%= render 'product/review' %>

            <div class="price">
              <span>Price:<%= product.price %>$</span>


              <%= render 'likes/like_button', product: product, target: 'Likes' %>

            </div>
          </div>
        </div>
      <% end %>
      <!-- End Single Product -->

    </div>
  <% end %>
 </div>
<% end %>