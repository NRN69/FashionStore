<%= turbo_frame_tag 'likes' do %>
  <div class="row">
    <div class="col-12">
      <div class="section-title">
        <h2>Favorite Products</h2>
      </div>
    </div>
  <% current_user.likes.each do |like| %>
    <% Product.where(id: like.product_id.to_i).each do |product| %>
      <div class="col-lg-3 col-md-4">

        <!-- Start Single Product -->

          <div class="single-product">
            <div class="product-image">
              <%= link_to image_tag(product.img), product, data: {turbo_frame: '_top'} %>
            </div>
            <div class="product-info">
              <span class="category"></span>
              <h4 class="title">
                <%= link_to product.title, product, data: {turbo_frame: '_top'} %>
              </h4>
              <ul class="review">
                <li><i class="bi bi-star-fill"></i></li>
                <li><i class="bi bi-star-fill"></i></li>
                <li><i class="bi bi-star-fill"></i></li>
                <li><i class="bi bi-star-fill"></i></li>
                <li><i class="bi bi-star"></i></li>
                <li><span>4.0 Review(s)</span></li>
              </ul>
              <div class="price">
                <span>Price:<%= product.price %>$</span>

                <%= render 'likes/like_button', product: product %>

              </div>
            </div>
          </div>

        <!-- End Single Product -->

      </div>
    <% end %>
  <% end %>
 </div>
<% end %>