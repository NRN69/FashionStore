<%= turbo_frame_tag 'orders' do %>

  <% if current_user.orders.empty? %>
    <div class="shopping-item">
      <h2 class="text-center text-secondary"> Your Orders is Empty </h2>
    </div>

  <% else %>
    <div class="row">
      <div class="col-12">
        <div class="section-title">
          <h2>All Orders</h2>
        </div>
      </div>

      <% orders.each do |order| %>
        <%= render order %>
      <% end %>

      <%= paginate orders %>

    </div>
  <% end %>
<% end %>