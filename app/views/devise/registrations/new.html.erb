<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= form.error_notification %>

  <div class="form-inputs">
    <%= render "devise/shared/avatar_preview", form: form %>
    <%= form.input :name, required: false, input_html: { autocomplete: "name"}, autofocus: true %>

    <%= form.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= form.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= form.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password" } %>

    <%= form.input :phone, required: false,input_html: { autocomplete: "+79001236543"}, lenght: 12, autofocus: true %>
    <br>
  </div>

  <div class="button">
    <%= form.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
