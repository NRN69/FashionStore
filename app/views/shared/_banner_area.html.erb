<% if user_signed_in? %>
  <!-- Start Banner Area -->
  <section class="banner section">
    <div class="container">
      <div class="row">
        <% current_user.favorites.each do |favorite| %>
          <% Product.where(id: favorite.product_id.to_i).each do |product| %>
            <div class="col-lg-6 col-md-6 col-12">
              <div class="single-banner">
                <div class="content">
                  <span><%= link_to image_tag(product.img, size: 300), product %></span>
                  <span><%= product.title.capitalize %></span>
                  <span>Color: <%= product.color.capitalize %></span>
                  <span>Price: <%= product.price %>$</span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </section>
  <!-- End Banner Area -->
<% end %>