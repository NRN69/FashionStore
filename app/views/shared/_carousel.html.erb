<!-- Start Hero Area -->
<section class="hero-area">
  <div class="container">
    <div class="row">
      <div class="custom-padding-right">
        <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="false">
          <div class="carousel-inner">
            <div class="carousel-item active">
              <%= link_to image_tag 'hero/hero-1.jpg', size: '600', alt: 'slider1', class: 'd-block w-100' %>
              <div class="carousel-caption d-none d-md-block">
<!--                <h5>299.9$</h5>-->
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag 'hero/hero-2.jpg', size: '600', alt: 'slider2', class: 'd-block w-100' %>
              <div class="carousel-caption d-none d-md-block">
                <%= link_to 'Купить', '#', class: 'btn btn-outline-dark btn-lg' %>
<!--                <h5>299.9$</h5>-->
              </div>
            </div>
            <div class="carousel-item">
              <%= image_tag 'hero/hero-1.jpg', size: '600', alt: 'slider3', class: 'd-block w-100' %>
              <div class="carousel-caption d-none d-md-block">
                <%= link_to 'Купить', '#', class: 'btn btn-outline-dark btn-lg' %>
<!--                <h5>299.9$</h5>-->
              </div>
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
