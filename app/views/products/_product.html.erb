<div class="col-lg-5 col-md-4">

  <%= render 'products/images_carousel' , product: product %>

    <div class="mt-3" id="flash">
      <%= render 'shared/flash' %>
    </div>

    <%= render 'reviews/reviews' , product: product %>

</div>

<div class="col-lg-7 col-md-4">

  <!-- Start Single Product -->
  <div class="single-product">
    <div class="product-info">

      <span class="category">
        <%= product.category.title %> > <%= product.brand %>
      </span>

      <h4 class="title mt-3">
        <%= product.title %>
      </h4><br>

      <h5 class="description">
        <%= product.content %>
      </h5><br>

      <h5 class="color ">Color: <%= product.color %>
      </h5><br>
      <h5 class="color">Material: <%= product.material %>
      </h5><br>


      <%= render 'cart/button_add_to_cart' , product: product %>

    </div>
  </div>


  <%= render 'reviews/new' , product: product %>





    <!-- End Single Product -->

</div>