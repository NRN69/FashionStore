<% recent_products.each do |recently| %>
  <div class="col-lg-3 col-md-4">
    <!-- Start Single Product -->
    <div class="single-product">
      <div class="product-image">
        <%= link_to image_tag(recently.image_first), recently %>
      </div>
      <div class="product-info">
        <h4 class="title">
          <span class="category">
            <%= link_to product.title, recently %>
          </span>
        </h4>

        <%= render 'products/rating' , product: product %>

          <div class="price">
            <span> Price:
              <%= recently.price %>$
            </span>
          </div>
      </div>
    </div>
    <!-- End Single Product -->
  </div>
  <% end %>